<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.optica.AppointmentBookingController">
    <VBox xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          spacing="10">
        <Label text="Full Name:"/>
        <TextField fx:id="fullNameField"/>

        <Label text="Date of Birth:"/>
        <DatePicker fx:id="dateOfBirthPicker"/>

        <Label text="Phone Number:"/>
        <TextField fx:id="phoneNumberField"/>

        <!-- Добавляем выбор специалиста -->
        <Label text="Select Specialist:"/>
        <ChoiceBox fx:id="specialistChoiceBox">
            <items>
                <!-- Здесь можно добавить ваших специалистов -->
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Specialist 1"/>
                    <String fx:value="Specialist 2"/>
                    <String fx:value="Specialist 3"/>
                </FXCollections>
            </items>
        </ChoiceBox>

        <!-- Добавляем табличку о стоимости и требуемых документах -->
        <Label text="Cost and Required Documents:"/>
        <TableView>
            <columns>
                <TableColumn text="Service"/>
                <TableColumn text="Cost"/>
                <TableColumn text="Required Documents"/>
            </columns>
            <!-- Привязываем данные к соответствующим полям модели -->
            <items>
                <!-- Ваш список услуг с данными о стоимости и требуемых документах -->
                <!-- Не забудьте настроить соответствующую модель данных в контроллере -->
            </items>
        </TableView>

        <Button text="Submit" onAction="#handleSubmitButtonAction"/>
    </VBox>
</AnchorPane>

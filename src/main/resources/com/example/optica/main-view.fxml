      fx:controller="com.example.optica.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Открыть каталог очков" onAction="#openGlassesCatalog"/>
    <Button text="Открыть каталог аксессуаров" onAction="#openAccessoriesCatalog"/>
    <Button text="Записаться к врачу" onAction="#openAppointmentBooking"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.optica.LoginController" style="-fx-background-color: #f0f0f0; -fx-padding: 20; -fx-spacing: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5;">
    <Label text="Authorization" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 200; -fx-pref-height: 40; -fx-font-size: 14;"/>
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 200; -fx-pref-height: 40; -fx-font-size: 14;"/>
    <Button text="Login" onAction="#handleLogin" style="-fx-pref-width: 100; -fx-pref-height: 40; -fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5;"/>
    <Button text="Register" onAction="#switchToRegisterScreen" style="-fx-pref-width: 100; -fx-pref-height: 40; -fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5;"/>
</VBox>

